<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comkeetasri.github.ebookstore.data.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/showBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="0"
            android:textSize="19sp"
            android:layout_alignBaseline="@+id/balanceText"
            android:layout_alignBottom="@+id/balanceText"
            android:layout_toEndOf="@+id/balanceText" />

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/addMoneyButton"
            android:layout_alignBottom="@+id/addMoneyButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp" />

        <Button
            android:id="@+id/addMoneyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Add more 500 Baht" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/cartButton"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="My cart" />

        <Button
            android:id="@+id/myBookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="My book" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home" />

    </LinearLayout>

</LinearLayout>
